<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="135dp"
            android:id="@+id/recImage"
            android:src="@drawable/imagecandidateviewtovoter"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recCandidateName"
            android:text="Name"
            android:layout_marginBottom="12dp"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImage"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recCandidateAge"
            android:text="Age"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recCandidateName"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recrecCandidateaddress"
            android:text="Address"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recCandidateAge"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vote"
            android:layout_marginStart="20dp"
            android:id="@+id/recrecCandidateButtuon"
            android:textSize="18sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green"
            android:layout_below="@id/recrecCandidateaddress"
            app:cornerRadius = "20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>